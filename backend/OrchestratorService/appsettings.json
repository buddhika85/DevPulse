{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.IdentityModel": "Debug",
      "Microsoft.Identity.Web": "Debug"

    }
  },

  "AllowedHosts": "*",

  "Cors": {
    "AllowedOrigins": [ "" ]
  },

  "SeqLogVisualizerSettings": {
    "Url": "http://localhost:5343"
  },

  "DevPulseJwtSettings": {
    "Key": "super_secret_signing_key_here_devPulse_backend_user_API", // Symmetric key for signing (use Key Vault in prod!)
    "Issuer": "DevPulse", // Who issues the token (DevPulse backend)
    "Audiences": [ // Who consumes the token (Angular, APIs)
      "DevPulseClient"
    ],
    "ExpiryHours": 1 // Configurable expiry
  },

  "MicroServiceUrls": {
    "UserAPI": "https://localhost:7249",
    "TaskAPI": "https://localhost:7218",
    "MoodAPI": "https://localhost:7201",
    "JounralAPI": "https://localhost:7193",
    "TaskJournalLinkAPI": "https://localhost:7239"
  },

  "PollyConfig": {
    "RetryCount": 3,
    "SleepDurationMilliSeconds": 300
  },

  "AzureApplicationInsightsSettings": {
    "ConnectionString": ""
  },

  "AzureBlobStorageSettings": { // to store serilog log files in Azure blob storage
    "ConnectionString": "",
    "LogsContainerName": ""
  }

}
